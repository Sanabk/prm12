{% extends 'base.html.twig' %}

{% block body %}
    <h1>Publication</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publication.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ publication.categorie }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ publication.region }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ publication.numero }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ publication.mail }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ publication.photos }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publication_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('publication_edit', { 'id': publication.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
